RewriteEngine On

# Block hidden files (.env, .git, etc.) and private app directories.
RewriteRule (^|/)\. - [F,L]
RewriteRule ^(app|storage|database|scripts)/ - [F,L,NC]

# Serve existing files/directories directly.
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route everything else through the app front controller.
RewriteRule ^ index.php [L,QSA]
